<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!-- LOG4NET DECLARE CONFIG SECTION -->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" requirePermission="false"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
  </startup>
  <appSettings>
    <!-- APP CONFIG -->
    <add key="SOURCE" value="C:\Users\02485124\OneDrive - KocSistem Bilgi ve Iletisim Hizmetleri A.S\Desktop\RoboCopy\A"/>
    <add key="DESTINATION" value="C:\Users\02485124\OneDrive - KocSistem Bilgi ve Iletisim Hizmetleri A.S\Desktop\RoboCopy\B"/>
    <add key="TIMEOUT" value="30000"/>
  </appSettings>
  <!-- LOG4NET SECTION -->
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value=".\avmFileSystemWatcher.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd-MM-yyyy HH:mm:ss} [%thread] - %message - %level%newline"/>
      </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="RollingFileAppender"/>
    </root>
    <logger name="NHibernate" additivity="false">
      <level value="ERROR"/>
      <appender-ref ref="RollingFileAppender"/>
    </logger>    
  </log4net>
</configuration>
